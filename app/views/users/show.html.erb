<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= count_if_any(:posts) %>,
           <%= count_if_any(:comments) %>
         </small>
       </div>
     </div>
   </div>
 </div>
 
 <h2>Posts</h2>
 <%= render @user.posts %>
 
 <h2>Comments</h2>
 <%= render @user.comments %>

 <h2>Favorites</h2>
  <% @user.favorites.each do |favorite| %>
    <%= image_tag favorite.post.user.avatar_url(24) %>
    <%= favorite.post.title %>
    <%= pluralize(favorite.post.points, 'point') %>
    <br/>
  <% end %>